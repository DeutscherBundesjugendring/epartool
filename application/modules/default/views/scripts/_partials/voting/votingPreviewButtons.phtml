<?php
    $settings = $this->layout()->settings;
    $labels = $this->layout()->labels;
    $styles = array('not-my-opinion', 'not-important', 'important', 'very-important', 'mega-important');
?>
<?php if ($settings['btn_important'] == 'y'): ?>
    <li class="voting-superbutton<?php echo ($this->pimp == 'y') ? ' active' : ''; ?>">
        <a href="#"
           rel="<?php echo $this->tid; ?>"
           data="y"
           class="voting-particularly-important voting-superbtn"
        >
            <span class="icon-star"></span>
            <?php echo $this->escape($settings['btn_important_label']); ?>
        </a>
    </li>
<?php endif; ?>

<?php for ($i = $settings['btn_numbers']; $i >= 0; $i--): ?>
    <li<?php echo ($this->points != null && $this->points == $i) ? ' class="active"' : ''; ?>>
        <a href="#"
           rel="<?php echo $this->tid; ?>"
           data="<?php echo $i; ?>"
           class="voting-statement <?php echo $styles[$i]; ?>"
        >
            <?php echo $this->escape($labels[$i]); ?>
        </a>
    </li>
<?php endfor; ?>

<li<?php echo ($this->points == '5') ? ' class="active"' : ''; ?>>
    <a href="#"
       rel="<?php echo $this->escape($this->tid); ?>"
       data="5"
       class="voting-statement no-opinion"
    >
        <?=$this->translate('Keine Meinung')?>
    </a>
</li>
