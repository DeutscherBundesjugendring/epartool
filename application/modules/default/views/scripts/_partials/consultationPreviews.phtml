                            <h2><?=$this->translate('Voting')?></h2>
                            <?php if (isset($bubbles['voting'])): ?>
                                <?php echo $bubbles['voting']; ?>
                            <?php else: ?>
                                <?php if ($con->vot_show == 'y'): ?>
                                    <small class="info">vom <?php echo $date->set($con->vot_fr)->get(Zend_Date::DATE_MEDIUM); ?><br />
