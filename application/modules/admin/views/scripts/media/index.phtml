<section class="section-content">
    <div class="container">

        <?php if (!$this->lockDir): ?>
            <div class="row">
                <div class="sidebar">
                    <?php if ($this->folder): ?>
                        <?=$this->mediaNavigation('folders');?>
                    <?php elseif ($this->kid): ?>
                        <?=$this->mediaNavigation('consultations');?>
                    <?php else: ?>
                        <?=$this->mediaNavigation('all');?>
                    <?php endif; ?>
                </div>
                <div class="content">
        <?php endif; ?>

        <?php if (!$this->lockDir): ?>
            <?php if ($this->folder): ?>
                <a href="<?=$this->url(['action' => 'folders', 'folder' => null]);?>" class="back"><?=$this->translate('Back to Folders');?></a>
            <?php elseif ($this->kid): ?>
                <a href="<?=$this->url(['action' => 'consultations']);?>" class="back"><?=$this->translate('Back to Consultations');?></a>
            <?php endif; ?>
        <?php endif; ?>

        <h2><?=$this->title;?></h2>

        <?php if (!empty($this->files)): ?>
            <div class="row">

                <!-- Media thumbnails -->
                <?php foreach ($this->files as $file):?>
                    <div class="<?=($this->lockDir ? 'col-xs-6 col-sm-4 col-md-3' : 'col-xs-6 col-sm-4 col-lg-3');?>">
                        <div class="thumbnail thumbnail-fixed">

                            <a
                                <?php if ($this->targetElId): ?>
                                    <?php // We are in select mode. ?>
                                    onclick="mediaSelectPopup.insertValue(
                                        '<?=$file['dirRefFilename'];?>',
                                        '<?=$this->targetElId;?>',
                                        '<?=$this->lockDir ? '' : $file['dirRefDirUrl'];?>',
                                        '<?=$this->mediaPresenter($file, 'admin_media_form_element_lowDPI');?>',
                                        '<?=$this->CKEditorFuncNum;?>'
                                    )"
                                    href="#"
                                    title="<?=$this->translate('Select');?> <?=$file['basename'];?>"
                                <?php else: ?>
                                    <?php // We are in listing mode. ?>
                                    href="<?=$this->url(['action' => 'open', 'filename' => $file['basename'], 'kid' => $file['kid'], 'folder' => $file['folder']]);?>/"
                                    target="_blank"
                                    title="<?=$this->translate('Open');?> <?=$this->escape($file['basename']);?>"
                                <?php endif; ?>
                            >
                                <div class="thumbnail-image" style="background-image: url(<?=$this->mediaPresenter($file, 'admin_thumbnail_lowDPI');?>);"></div>
                                <div class="caption">
                                    <h4 class="thumbnail-title"><?=$this->escape($file['basename']);?></h4>
                                    <small class="text-muted">
                                        <?=$this->escape($file['size']);?>&nbsp;kB<br />
                                    </small>
                                </div>
                            </a>

                                <div class="thumbnail-actions">
                                    <?php if ($file['folder']): ?>
                                        <?php // File is located in a custom folder and thus can be renamed. ?>
                                        <a
                                            href="<?=$this->url(['action' => 'edit-file', 'folder' => $file['folder'], 'filename' => $file['basename']]);?>/"
                                            class="item-action"
                                            title="<?=$this->translate('Rename');?>"
                                        >
                                            <span class="glyphicon glyphicon-pencil"></span>
                                        </a>
                                    <?php endif; ?>
                                    <a
                                        href="<?=$this->url(['action' => 'download', 'filename' => $file['basename'], 'kid' => $file['kid'], 'folder' => $file['folder']]);?>/"
                                        class="item-action"
                                        title="<?=$this->translate('Download');?>"
                                        >
                                        <span class="glyphicon glyphicon-download-alt"></span>
                                    </a>
                                    <?=$file['deleteForm'];?>
                                </div>

                        </div><!-- .thumbnail -->
                    </div>
                <?php endforeach; ?>

            </div>
        <?php else: ?>
            <p class="alert alert-info">
                <span class="glyphicon glyphicon-info-sign"></span>
                <?=$this->translate('No media has been uploaded yet.');?>
            </p>
        <?php endif; ?>

        <?php if (!$this->lockDir): ?>
                </div>
            </div><!-- .row -->
        <?php endif; ?>

    </div>
</section>
