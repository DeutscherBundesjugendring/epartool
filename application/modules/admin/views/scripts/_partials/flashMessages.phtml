<?php if (!empty($this->layout()->messages)): ?>
    <?php foreach ($this->layout()->messages as $level => $messages): ?>
        <?php if (!empty($messages)): ?>
            <?php foreach ($messages as $message): ?>
                <div role="alert" class="alert alert-<?=$level;?> alert-dismissible alert-full fade in">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <div class="container">
                        <?=$this->translate($message);?>
                    </div>
                </div>
            <?php endforeach; ?>
        <?php endif; ?>
    <?php endforeach; ?>
<?php endif; ?>
