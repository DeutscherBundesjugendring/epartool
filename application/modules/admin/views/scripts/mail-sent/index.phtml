                                        <td><?=$email->subject;?></td>
                                        <td>
                                            <button
                                                name="resendId"
                                                type="submit"
                                                onclick="return confirm('<?=$this->translate('Are you sure?');?>');"
                                                value="<?=$email->id;?>"
