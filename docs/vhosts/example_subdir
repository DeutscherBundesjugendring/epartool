<VirtualHost *:80>
    ServerName dev.dbjr
    #ServerAlias dbjr dbjr.de
    Alias /myapp /var/www/dbjr_test/myapp/public
    DocumentRoot /var/www/dbjr_test

    <Directory /var/www/dbjr_test/myapp/public>
        Options FollowSymLinks MultiViews
        AllowOverride Indexes AuthConfig Limit FileInfo Options
        Order allow,deny
        Allow from all
        php_admin_flag engine on
    </Directory>

    php_admin_flag display_errors Off
    DirectoryIndex index.html index.php default.php
    SetEnv APPLICATION_ENV "production"
    
    ErrorLog /var/log/apache2/error.log
    LogLevel warn
    
    # Enable for Debugging only
    CustomLog /var/log/apache2/access_dbjr.log combined
    #CustomLog /dev/null combined
    ServerSignature On
</VirtualHost>
